<div class="bg-gray-100">
    <header class="bg-blue-500 py-4">
        <div class="container mx-auto text-center">
            <h1 class="text-white text-3xl font-semibold">{{name}} Details</h1>
        </div>
    </header>

    <main class="container mx-auto mt-8 bg-white p-6 rounded-lg shadow-md">
       
        <h2 class="text-2xl font-semibold mt-4">Occupation: {{occupation}}</h2>
        <h4>Movies:</h4>
        <p class="text-gray-600 mt-2">CatchPhrase: {{catchPhrase}}</p>
        {{#each movies}}
            <p>Title: {{title}}</p>
            <p>Genre: {{genre}}</p>
     
        {{/each}}
        <!-- Buttons -->
        <div class="mt-4 flex space-x-4">
            <a href="/celebrities/{{_id}}/edit" class="bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600">Edit Celebrity</a>
            <form action="/celebrities/{{_id}}/delete" method="POST">
                <label for="first-name-input" class="text-gray-600">Delete this Celebrity:</label>
                <input id="first-name-input" type="text" name="name" value="{{name}}" class="border border-gray-400 rounded-md py-2 px-3"/>
                <button class="bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600" type="submit">DELETE</button>
            </form>
        </div>
    </main>
</div>