<div class="bg-gray-100">
<header class="bg-blue-500 py-4">
    <div class="container mx-auto text-center">
        <h1 class="text-white text-3xl font-semibold">Edit Celebrity: {{celebrity.name}}</h1>
    </div>
</header>

<main class="container mx-auto mt-8 bg-white p-6 rounded-lg shadow-md">
    
    
    <div class="mt-4 flex space-x-4">
        
        
        <form action="/celebrities/{{celebrity._id}}" method="POST">

             <label for="occupation" class="text-gray-600">occupation:</label>
            <input id="occupation" type="text" name="occupation" class="border border-gray-400 rounded-md py-2 px-3" value="{{celebrity.occupation}}"/>

            <label for="catchPhrase" class="text-gray-600">catchPhrase:</label>
            <input id="catchPhrase" type="text" name="catchPhrase" class="border border-gray-400 rounded-md py-2 px-3" value="{{celebrity.catchPhrase}}"/>
    
            <label for="movies" class="text-gray-600">movies:</label>
            <select id="movies" name="movies" class="border border-gray-400 rounded-md py-2 px-3" multiple>
                {{#each celebrity.movies}}
                    <option value="{{_id}}" selected>{{title}}</option>
                {{/each}}

                {{#each notInCast}}
                    <option value="{{_id}}">{{title}}</option>
                {{/each}}
             </select>
        
        <button type="submit" class="bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600">UPDATE</button>

    </form>
    </div>
</main>
</div>