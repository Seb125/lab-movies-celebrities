<h2></h2>




   <form action="/celebrities/create" method="POST">
        <label for="first-name-input">Name:</label>
        <input id="first-name-input" type="text" name="name" />

        <label for="occupation">Occupation:</label>
        <input id="occupation" type="text" name="occupation" />

        <label for="catchPhrase">catchPhrase:</label>
        <input id="catchPhrase" type="text" name="catchPhrase" />

         <label for="movies">Movies:</label>
        <select id="movies" name="movies" multiple>
            {{#each movies}}
                <option value="{{_id}}">{{title}}</option>
            {{/each}}
        </select>
        
        <button type="submit">Save Celebrity</button>
    </form>
